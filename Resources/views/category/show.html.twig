{% extends '@JasderoPassePlat/main/adminLayout.html.twig' %}

{% block passe_plat_content %}
    <div class="container">
        <div class="row">
            <h5 class="center-align">Category</h5>
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                </tbody>
            </table>

            <div class="iconsBlock col s12 center-align">
                <a href="{{ path('category_index') }}" title="back to the list">
                    <button type="button" class="btn-floating grey darken-3"><i class="material-icons">skip_previous</i></button>
                </a>
                <a href="{{ path('category_edit', { 'id': category.id }) }}" class="iconAsLink" title="edit">
                    <button class="btn-floating grey darken-3"><i class="material-icons">edit</i></button>
                </a>
                {{ form_start(delete_form) }}
                <button type="submit" title="delete" class="btn-floating grey darken-3"><i class="material-icons">delete_forever</i></button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
