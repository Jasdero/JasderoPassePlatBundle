{% extends '@JasderoPassePlat/main/adminLayout.html.twig' %}

{% block passe_plat_content %}
    <div class="container">
        <h5 class="center-align">Status edit</h5>

        {# form section #}
        <div class="row">
            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}
            <div class="col s12 m4 input-field">
                {{ form_row(edit_form.name) }}
            </div>
            <div class="col s12 m4">
                {{ form_row(edit_form.color, {'attr':{'class':'browser-default'}}) }}
            </div>
            <div class="col s12 m4">
                {{ form_row(edit_form.activated) }}
            </div>
            <div class="row">
                <div class="col s12 input-field">
                    {{ form_row(edit_form.description) }}
                </div>
            </div>

        {# buttons section#}
            <div class="col s12 iconsBlock center-align">
                <a href="{{ path('state_index') }}" title="back">
                    <button type="button" class="btn-floating grey darken-3"><i class="material-icons">skip_previous</i></button>
                </a>
                <button type="submit" class="btn-floating grey darken-3" title="confirm"><i class="material-icons">done</i></button>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}
