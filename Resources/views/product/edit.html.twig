{% extends '@JasderoPassePlat/main/adminLayout.html.twig' %}

{% block passe_plat_content %}
    <div class="container">
        <div class="row">
            <h5 class="center-align">{{ content }} edit</h5>
            {{ form_start(edit_form) }}
            <div class="row">
            <div class="col s12 m6 left-align">
                {{ form_row(edit_form.catalog) }}
            </div>
            </div>
            <div class="col s6">
                {{ form_row(edit_form.pretaxPrice) }}
            </div>
            <div class="col s6">
                {{ form_row(edit_form.vatRate) }}
            </div>
            {{ form_row(edit_form.state) }}
            <div class="input-field">
                {{ form_row(edit_form.comment) }}
            </div>
            <div class="col s12 center-align iconsBlock">
                <a href="{{ path('product_index') }}" title="back">
                    <button type="button" class="btn-floating grey darken-3"><i class="material-icons">skip_previous</i></button>
                </a>
                <button type="submit" class="btn-floating grey darken-3" title="confirm"><i class="material-icons">done</i></button>
                {{ form_end(edit_form) }}
                {{ form_start(delete_form) }}
                <button type="submit" title="delete" class="btn-floating grey darken-3"><i class="material-icons">delete_forever</i></button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
