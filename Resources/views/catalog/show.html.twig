{% extends '@JasderoPassePlat/main/adminLayout.html.twig' %}

{% block passe_plat_content %}
    <div class="container">
        <div class="row">
            <h5 class="center-align">Catalog</h5>
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ catalog.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ catalog.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ catalog.description }}</td>
                </tr>
                <tr>
                    <th>Pretaxprice</th>
                    <td>{{ catalog.pretaxPrice }}</td>
                </tr>
                <tr>
                    <th>Activated</th>
                    <td>{% if catalog.activated %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Branch</th>
                    <td>{% if catalog.branch %}{{ catalog.branch.name }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{% if catalog.category %}{{ catalog.category.name }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Subcategory</th>
                    <td>{% if catalog.subCategory %}{{ catalog.subCategory.name }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
            <div class="iconsBlock col s12 center-align">
                    <a href="{{ path('catalog_index') }}" title="back to the list">
                        <button type="button" class="btn-floating grey darken-3"><i class="material-icons">skip_previous</i></button>
                    </a>
                    <a href="{{ path('catalog_edit', { 'id': catalog.id }) }}" class="iconAsLink">
                        <button type="button" class="btn-floating grey darken-3"><i class="material-icons">edit</i></button>
                    </a>
                    {{ form_start(delete_form) }}
                    <button type="submit" title="delete" class="btn-floating grey darken-3"><i class="material-icons">delete_forever</i></button>
                    {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
